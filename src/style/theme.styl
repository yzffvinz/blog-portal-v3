header
  padding-bottom 60px
  @media (min-width 1000px)
    max-width 1280px
    margin-bottom 60px
    border-bottom 1px #e3e3e3 solid
.article__header
  max-width 750px
  font-family TiemposHeadline, serif
  margin 0 auto
  line-height 1.3
  h1
    margin-block-start 0em
    margin-block-end 0em
    font-size 26px
    font-weight normal
    text-align center
    @media (min-width 600px)
      font-size 38px
    @media (min-width 1000px)
      font-size 50px
.article__columns
  @media (min-width 1000px)
    display flex
  .article__column--main
    flex 3 1 auto
  .article__column--aside
    @media (min-width 1000px)
      margin-left 60px
      flex 1 0 330px
    @media (min-width 1200px)
      .aside__container
        margin-left 100px
        flex 1 0 330px
.article__body
  white-space pre-wrap
  font-size 18px
  @media (min-width 600px)
    font-size 20px
